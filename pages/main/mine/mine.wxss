.box {
  height: calc(100vh - 220rpx);
  background-color: #f9f9f9;
  overflow: scroll;
}

/* 登录名片 */
.userCard {
  width: 90%;
  margin: 60rpx auto;
  background-color: white;
  padding: 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  border: 6rpx solid #e6e6e6;
  border-radius: 20rpx;
}

.userMess {
  width: 65%;
  /* color: white; */
}

.userMess>.name {
  font-size: 46rpx;
  margin-bottom: 20rpx;
}

.userMess>.num {
  display: flex;
  align-items: flex-start;
  flex-direction: column;
}

.userImg {
  display: flex;
  justify-content: end;
  border-radius: 50%;
  border: 10rpx solid white;
}

.userImg>image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
}

/* 选项卡 */
.TabCard {
  width: 90%;
  margin: 90rpx auto;
}

.cardBox {
  width: 100%;
  border-radius: 20rpx;
  background-color: white;
  display: flex;
  justify-content: space-between;
  margin-bottom: 50rpx;
  border: 6rpx solid #e6e6e6;
}

.cardBox>.title {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  /* color: #627496; */
  padding: 20rpx 40rpx;
  margin: 10rpx auto;
  font-weight: bold;
}

.cardBox>.title>image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.cardBox>.icon {
  display: flex;
  align-items: center;
  font-size: 50rpx;
  padding-right: 20rpx;
}

.m-topCard {
  display: flex;
  justify-content: space-between;
  border-radius: 16rpx;
  width: 90%;
  margin-left: 5%;
  margin-top: 50rpx;
  align-items: center;
  padding: 5% 0;
  background-color: white;
  border: 6rpx solid #e6e6e6;
}

.m-topCard>.left {
  display: flex;
  align-items: center;
}

.m-topCard>.left>.left {}

.m-topCard>.left>.right {
  font-size: 30rpx;
  font-weight: bold;
  /* color: #fff; */
  margin-left: 15rpx;
}

.m-topCard>.right {
  width: 232rpx;
  height: 84rpx;
  background: rgba(57, 130, 136, 1);
  border-radius: 40rpx 0px 0px 40rpx;
  text-align: center;
  line-height: 84rpx;
  font-size: 30rpx;
  color: rgba(255, 255, 255, 1);
}

/* m-title */
.m-title {
  margin-top: 46rpx;
  width: 90%;
  margin-left: 6%;
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: rgba(0, 0, 0, 1);
}